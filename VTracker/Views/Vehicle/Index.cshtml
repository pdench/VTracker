@model IEnumerable<VTracker.Models.Vehicle>

@{
    ViewBag.Title = "My Vehicles";
}

<h4>My Vehicles</h4>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" } )
</p>
<table class="table table-striped table-bordered table-condensed table-responsive">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleName)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Index", "Activity", new { id = item.Id, vehid = item.Id })">
                <span class="glyphicon glyphicon-tasks" title="Activities"></span>
            </a>
            |
            <a href="@Url.Action("Edit", new { id = item.Id })">
                <span class="glyphicon glyphicon-edit" title="Edit"></span>
            </a>
            |
            <a href="@Url.Action("Delete", new { id = item.Id })">
                <span class="glyphicon glyphicon-remove" title="Delete"></span>
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleName)
        </td>
    </tr>
}

</table>
