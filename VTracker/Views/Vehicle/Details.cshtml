@model VTracker.ViewModels.VehicleViewModel

@{
    ViewBag.Title = "Vehicle Details";
}

<div>
    <h4>Vehicle Details</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.VehicleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VehicleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>
</div>

<table class="table table-striped table-bordered table-condensed table-responsive">
    <tr>
        <th colspan="6" class="text-center">Gas Purchases</th>
    </tr>
    <tr>
        <th></th>
        <th>Vehicle</th>
        <th>Activity Date</th>
        <th>Total Miles</th>
        <th>Gallons</th>
        <th>MPG</th>
    </tr>

    @foreach (var item in Model.GasPurchases)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">
                    <span class="glyphicon glyphicon-edit" title="Edit"></span>
                </a>
                |
                <a href="@Url.Action("Delete", new { id = item.Id })">
                    <span class="glyphicon glyphicon-remove" title="Delete"></span>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDate)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Miles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallons)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MPG)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>*@

            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>
    }
</table>

<div class="activity_divider"></div>

<table class="table table-striped table-bordered table-condensed table-responsive" ">
    <tr>
        <th colspan="7" class="text-center">Non-Gas Purchases</th>
    </tr>
    <tr>
        <th></th>
        <th>Description</th>
        <th>Vehicle</th>
        <th>Activity Date</th>
        <th>Total Miles</th>
        <th>Description</th>
        <th>Comments</th>
    </tr>

    @foreach (var item in Model.NonGasPurchases)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">
                    <span class="glyphicon glyphicon-edit" title="Edit"></span>
                </a>
                |
                <a href="@Url.Action("Delete", new { id = item.Id })">
                    <span class="glyphicon glyphicon-remove" title="Delete"></span>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Miles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gallons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MPG)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>

            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
        </tr>
    }

</table>

<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
